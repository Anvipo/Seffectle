<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/send_feedback_LL"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dNDTeam.seffectle.vk.SendFeedbackActivity">

    <EditText
        android:id="@+id/feedback_text_ET_ASF"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:hint="@string/input_your_feedback_here"
        android:imeOptions="flagNoExtractUi"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/send_feedback_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        android:drawableLeft="@android:drawable/ic_dialog_email"
        android:drawableStart="@android:drawable/ic_dialog_email"
        android:gravity="center_vertical|center|start"
        android:text="@string/send_feedback" />

</LinearLayout>
